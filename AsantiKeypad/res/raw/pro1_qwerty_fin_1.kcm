type OVERLAY

# both yellow-arrow keys are 464 (FUNCTION)

# orig FORWARD_DEL
#map key 111 PLUS

# orig EQUALS
#map key 13 FORWARD_DEL

# orig BACK
map key 158 ESCAPE

# ROW 1

key ESCAPE {
    base:                               fallback BACK
    fn:                                 fallback HOME
}

# scandic shift+number
key 2 {
    label, base:                        '2'
    shift:                              '"'
    fn:                                 '@'
}

key 6 {
    label, base:                        '6'
    shift:                              '&'
    fn:                                 '^'
}

key 7 {
    label, base:                        '7'
    shift:                              '/'
    fn:                                 '&'
}

key 8 {
    label, base:                        '8'
    shift:                              '('
    fn:                                 '*'
}

key 9 {
    label, base:                        '9'
    shift:                              ')'
    fn:                                 '('
}

key 0 {
    label, base:                        '0'
    shift:                              '='
    fn:                                 ')'
}

key MINUS {
    label, base:                        '-'
    shift:                              '?'
    fn:                                 '_'
}


# ROW 2

# replace ` with '
key GRAVE {
    label:                              '\u0027'
    base:                               '\u0027'
    shift, fn:                          '~'
    # android default
    alt:                                '\u0300'
    alt+shift:                          '\u0303'
}

# add ´
key Q {
    label:                              'Q'
    base:                               'q'
    shift, capslock:                    'Q'
    fn:                                 '\u0301'
}

# add `
key W {
    label:                              'W'
    base:                               'w'
    shift, capslock:                    'W'
    fn:                                 '\u0300'
}

# add euro
key E {
    label:                              'E'
    base:                               'e'
    shift, capslock:                    'E'
    fn:                                 '\u20ac'
    alt:                                '\u0301'
}

# add ¨
key U {
    label:                              'U'
    base:                               'u'
    shift, capslock:                    'U'
    fn, alt:                            '\u0308'
}

# add ^
key I {
    label:                              'I'
    base:                               'i'
    shift, capslock:                    'I'
    fn, alt:                            '\u0302'
}

key SEMICOLON {
    label:                              '\u00c4'
    base:                               '\u00e4'
    shift, capslock:                    '\u00c4'
    fn:                                 ':'
}


# ROW 3

key S {
    label:                              'S'
    base:                               's'
    shift, capslock:                    'S'
    fn, alt:                            '\u00df'
    fn+shift, fn+capslock, fn+ctrl:     '\u1e9e'
}

key H {
    label:                              'H'
    base:                               'h'
    shift, capslock:                    'H'
    fn:                                 '\u00bd'
}


# ö
key APOSTROPHE {
    label:                              '\u00d6'
    base:                               '\u00f6'
    shift, capslock:                    '\u00d6'
    fn:                                 '"'
}

# ROW 4

# add ~
key N {
    label:                              'N'
    base:                               'n'
    shift, capslock:                    'N'
    fn, alt:                            '\u0303'
}

key M {
    label:                              'M'
    base:                               'm'
    shift, capslock:                    'M'
    fn:                                 '\u00b5'
}

# add ;
key COMMA {
    label:                              ','
    base:                               ','
    shift:                              ';'
    fn:                                 '<'
}

# add :
key PERIOD {
    label:                              '.'
    base:                               '.'
    shift:                              ':'
    fn:                                 '>'
}

# stock fixups for missing shift+X
key LEFT_BRACKET {
    label, base:                        '['
    shift, fn:                          '{'
}
key RIGHT_BRACKET {
    label, base:                        ']'
    shift, fn:                          '}'
}
key BACKSLASH {
    label, base:                        '\u005c'
    shift, fn:                          '|'
}
key 1 {
    label, base:                        '1'
    shift, fn:                          '!'
}
key 3 {
    label, base:                        '3'
    shift, fn:                          '#'
}
key 4 {
    label, base:                        '4'
    shift, fn:                          '$'
}
key 5 {
    label, base:                        '5'
    shift, fn:                          '%'
}

key O {
    label:                              'O'
    base:                               'o'
    shift, capslock:                    'O'
    fn:                                 '\u00e5'
    fn+shift, fn+capslock, fn+ctrl:     '\u00c5'
}
